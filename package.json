{
  "name": "grunt-html",
  "description": "Grunt plugin for HTML validation, using the Nu Html Checker (v.Nu)",
  "version": "15.0.2",
  "homepage": "https://github.com/validator/grunt-html",
  "author": "JÃ¶rn Zaefferer <joern.zaefferer@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/validator/grunt-html.git"
  },
  "bugs": {
    "url": "https://github.com/validator/grunt-html/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "mocha": "mocha",
    "lint": "xo",
    "fix": "xo --fix",
    "test": "npm run lint && npm run mocha",
    "test:grunt": "grunt ci --force",
    "test:ci": "npm run mocha && npm run test:grunt",
    "test:coverage": "c8 npm run test:ci"
  },
  "dependencies": {
    "async": "^3.2.1",
    "chalk": "^4.1.2",
    "vnu-jar": "21.10.12"
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "grunt": "^1.4.1",
    "mocha": "^9.1.2",
    "strip-ansi": "^6.0.1",
    "time-grunt": "^2.0.0",
    "xo": "^0.45.0"
  },
  "peerDependencies": {
    "grunt": ">=0.4.0"
  },
  "keywords": [
    "gruntplugin"
  ],
  "files": [
    "{lib,tasks}/**/*.js"
  ],
  "c8": {
    "reporter": [
      "html",
      "lcovonly",
      "text-summary"
    ]
  },
  "mocha": {
    "timeout": 10000,
    "check-leaks": true,
    "throw-deprecation": true,
    "trace-deprecation": true,
    "trace-warnings": true,
    "use_strict": true
  },
  "xo": {
    "space": true,
    "rules": {
      "arrow-body-style": "off",
      "capitalized-comments": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/filename-case": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "overrides": [
      {
        "files": "test/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  }
}
